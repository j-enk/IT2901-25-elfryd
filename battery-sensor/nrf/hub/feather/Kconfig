# Config options for mqtt_publisher sample application

# Copyright (c) 2020 Intel Corporation
# SPDX-License-Identifier: Apache-2.0

mainmenu "Networking mqtt_publisher sample application"

config NET_SAMPLE_APP_MAX_ITERATIONS
	int "Number of times to Publish sample MQTT messages"
	default 500
	help
	  Send sample MQTT messages this many times in a MQTT connection
	  before exiting. A value of zero means that the messages are sent
	  forever.

config NET_SAMPLE_APP_MAX_CONNECTIONS
	int "Number of times to connect to the MQTT server"
	default 0
	help
	  Number of times to connect to the MQTT server. With each connection
	  send NET_SAMPLE_APP_MAX_ITERATIONS amount of MQTT sample messages.
	  A value of zero means to continue forever.

# MQTT Configuration options
config MQTT_BUFFER_SIZE
    int "MQTT buffer size"
    default 2048
    help
      Maximum size of the MQTT message buffer.

config MQTT_CONNECT_ATTEMPTS
    int "Number of connection attempts"
    default 3
    help
      Number of times to attempt connecting to the MQTT broker.

config MQTT_CONNECT_RETRY_DELAY_MS
    int "Delay between connection attempts in milliseconds"
    default 5000
    help
      Time to wait between connection attempts.

config MQTT_CONNECT_TIMEOUT_MS
    int "Connection timeout in milliseconds"
    default 5000
    help
      Timeout for MQTT connection.

config MQTT_SLEEP_MS
    int "Sleep time between MQTT operations in milliseconds"
    default 5000
    help
      Time to sleep between MQTT operations.

config MQTT_MESSAGE_COUNT
    int "Number of MQTT messages to send"
    default 10
    help
      Number of messages to publish before disconnecting.

config MQTT_CLIENT_ID
    string "MQTT client identifier"
    default "elfryd_hub"
    help
      MQTT client identifier.

config MQTT_BROKER_HOSTNAME
    string "MQTT broker hostname"
    default "elfryd.northeurope.cloudapp.azure.com"
    help
      Hostname of the MQTT broker.

config MQTT_BROKER_PORT
    int "MQTT broker port"
    default 8885
    help
      Port number of the MQTT broker.

config MQTT_TOPIC
    string "MQTT topic"
    default "hub/data"
    help
      Topic to publish data to.

config MQTT_TLS_SEC_TAG
    int "TLS security tag"
    default 42
    help
      Security tag for TLS credentials.

# Sensor configuration options
menu "Sensor Configuration"

config SENSOR_BATTERY_INTERVAL
    int "Battery sampling interval in seconds"
    default 60
    help
      Interval in seconds between battery data publishing (0 = disabled).

config SENSOR_TEMP_INTERVAL
    int "Temperature sampling interval in seconds"
    default 300
    help
      Interval in seconds between temperature data publishing (0 = disabled).

config SENSOR_GYRO_INTERVAL
    int "Gyroscope sampling interval in seconds"
    default 600
    help
      Interval in seconds between gyroscope data publishing (0 = disabled).

endmenu

source "Kconfig.zephyr"
